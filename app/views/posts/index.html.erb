<div class='posts-container'>
	<h2>All Posts</h2>
	<% @posts.each do |post| %>
		<%= post.user.full_name %>
		<br>
		<%= post.body %>
		<br>
		<%= post.created_at %>
		<br>
		<br>
		<%= link_to 'Show', post_path(post) %>
		<% if post.user == current_user %>
			<%= link_to 'Edit', edit_post_path(post) %>
			<%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	<% end %>
</div>
