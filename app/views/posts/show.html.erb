<div class='post-container'>
  <div class='post-header'>
    <h4 ><%= @post.user.full_name %></h4>
    <h5><%= @post.created_at.strftime('%B %d %Y at %H:%M') %></h5>
  </div>
  <div class='post-body'>
    <p class='post-body-text'><%= @post.body %></p>
    <% if @post.post_image.attached? %>
      <%= image_tag @post.post_image.variant(resize_to_limit: [200, nil]), width: '200px', height: 'auto', class: 'post-image' %>
    <% end %>
  </div>
  <%if @post.user == current_user %>
    <div class='post-actions'>
      <% if current_user.likes_post?(@post) %>
        <%= link_to "Unlike (#{pluralize(@post.likes.count, 'Like')})" %>
      <% else %>
        <%= link_to "Like (#{pluralize(@post.likes.count, 'Like')})",  likes_path(user_id: current_user.id, post_id: @post.id), method: :post%>
      <% end %>
      <%= link_to 'Edit', edit_post_path(@post) %>
      <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>
<div class='comment-container'>
  <h3>New Comment</h3>
  <%= render 'comments/form' %>
</div>
<div class='comments-container'>
  <h3>Comments</h3>
  <%= render @post.comments, post: @post %>
</div>
