<div class='notification-list-container'>
  <h2>Notifications</h2>
  <% if current_user.notifications.empty? %>
    <p>You have no notifications.</p>
  <% else %>
    <ul class='notification-list'>
      <% @friends.each do |friend| %>
        <div class='notification-container'>
          <li><%= link_to("#{friend.full_name} sent you a friend request.", notification_path(friend.id, type: 'friend'), method: :patch )%></li>
        </div>
      <% end %>
      <% @post_likes.each do |like| %>
        <div class='notification-container'>
          <li><%= link_to("#{like.user.full_name} liked your post.", notification_path(like.id, type: 'like'), method: :patch )%></li>
        </div>
      <% end %>
      <% @comment_likes.each do |like| %>
        <div class='notification-container'>
          <li><%= link_to("#{like.user.full_name} liked your comment.", notification_path(like.id, type: 'like'), method: :patch )%></li>
        </div >
      <% end %>
      <% @comments.each do |comment| %>
        <div class='notification-container'>
          <li><%= link_to("#{comment.user.full_name} commented on your post.", notification_path(comment.id, type: 'comment'), method: :patch )%></li>
        </div>
      <% end %>
    </ul>
    <div class='notification-actions'>
      <%= link_to 'Mark All as Seen', mark_all_as_seen_path %>
      <%= link_to 'Delete All Notifications', delete_all_notifications_path, method: :delete %>
    </div>
  <% end %>
</div>
