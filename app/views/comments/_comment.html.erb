<% if comment.user %>
  <div class='comment-container'>
    <div class='comment-header'>
      <h4><%= comment.user.full_name %></h4>
      <h5 class="comment-date"><%= comment.created_at.strftime('%B %d %Y at %H:%M') %></h5>
    </div>
    <div class='comment-body'>
      <p><%= comment.body %></p>
    </div>
    <div class='comment-actions'>
      <% if comment.user == current_user %>
        <%= link_to 'Delete', post_comment_path(post, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <% if current_user.likes_comment?(comment) %>
        <%= link_to "Unlike (#{pluralize(comment.likes.count, 'Like')})", destroy_comment_like_path(id: comment.id), method: :delete %>
      <% else %>
        <%= link_to "Like (#{pluralize(comment.likes.count, 'Like')})", create_comment_like_path(user_id: current_user.id, comment_id: comment.id, post_id: comment.post.id ), method: :post %>
      <% end %>
    </div>
  </div>
<% end %>
