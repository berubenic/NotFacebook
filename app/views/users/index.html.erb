<% if flash[:success] %>
	<h3><%= flash[:success] %></h3>
<% end %>
<% @users.each do |user| %>
	<% unless user == current_user %>
		<h4><%= user.full_name %></h4>
		<% unless current_user.friend_with?(user)%>
			<%= button_to 'Add Friend', 
             {controller: 'friendships', action: 'create', user_id: current_user.id, friend_id: user.id},
              method: :post %>
			<br>
		<% end %>
	<% end %>
<% end %>
